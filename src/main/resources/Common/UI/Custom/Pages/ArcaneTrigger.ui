$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    Anchor: (Width: 520, Height: 475);

    #Title {
      $C.@Title {
        @Text = %server.customUI.ArcaneTrigger.title;
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Full: 16);

      Group #ErrorScreen {
        LayoutMode: Top;
        Visible: false;

        Label {
          Text: %server.customUI.ArcaneTrigger.failedToLoadDataMessage;
          Anchor: (Bottom: 16);
          Style: (...$C.@DefaultLabelStyle, RenderBold: true, TextColor: #ff6666);
        }
      }

      Group #MainContent {
        LayoutMode: Top;
        Visible: true;

        Label {
          Text: %server.customUI.ArcaneTrigger.outputConnectionsTitle;
          Anchor: (Bottom: 12);
          Style: (...$C.@DefaultLabelStyle, RenderBold: true);
        }

        Group #OutputListContainer {
          LayoutMode: Top;
          Anchor: (Height: 280, Bottom: 10);
          Background: #000000(0.3);
          Padding: (Full: 8);
          
          Label #NoConnections { 
            Text: %server.customUI.ArcaneTrigger.noConnectionsMessage;
            Style: (FontSize: 14, TextColor: #afc2c3); 
            Visible: false;
          }

          Group #OutputList {
            LayoutMode: TopScrolling;
            ScrollbarStyle: $C.@DefaultScrollbarStyle;
          }
        }

        Group {
          LayoutMode: Right;

          Label #ConnectionCount {
            Text: %server.customUi.ArcaneTrigger.connectionCount;
            Anchor: (Bottom: 10);
            Style: (...$C.@DefaultLabelStyle, FontSize: 13, TextColor: #6e7da1);
          }
        }

        Group {
          Anchor: (Bottom: 10, Height: 1);
          Background: #5e512c;
        }

        Group #Buttons {
          LayoutMode: Left;
          Anchor: (Height: 44);

          $C.@SmallSecondaryTextButton #ClearButton {
            @Text = %server.customUI.ArcaneTrigger.buttonClearAllTitle;
            Visible: true;
          }
        }
      }
    }
  }
}

$C.@BackButton {}
